@model Assignment2.Models.News

@{
    ViewData["Title"] = "Create a News";
}

<h1>Create</h1>
<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label class="control-label">Upload File</label>
                <input type="file" name="uploadFile" class="form-control" />
                <span class="text-danger">@ViewData["FileUploadError"]</span>
            </div>
            <br />
            <div class="form-group">
                <input type="hidden" asp-for="SportClubId" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-sportClubId="@Model.SportClubId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
