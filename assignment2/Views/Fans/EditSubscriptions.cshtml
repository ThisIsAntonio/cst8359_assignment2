@model Assignment2.Models.ViewModels.NewsViewModel

@{
    ViewData["Title"] = "Edit Subscriptions";
    var fan = Model.Fans.First();
}
<br />
<hr />
<h1>Edit Subscriptions for @fan.FullName</h1>
<hr />
<br />
<table class="table" style="width:20%">
    <thead>
        <tr>
            <th>Sport Club</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var club in Model.SportClubs)
        {
            <tr>
                <td>@club.Title</td>
                <td>
                    <form asp-action="UpdateSubscription" method="post" style="display:inline;">
                        <input type="hidden" name="fanId" value="@fan.Id" />
                        <input type="hidden" name="sportClubId" value="@club.Id" />
                        <a href="javascript:;" onclick="parentNode.submit()" class="text-primary">
                            @(Model.Subscriptions.Any(s => s.SportClubId == club.Id) ? "Unregister" : "Register")
                        </a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<p>
    <a asp-action="Index" class="text-primary">Back to Fans List</a>
</p>
